input {
    keyboard {
        xkb {
            layout "es"
            options "ctrl:nocaps"
        }
            repeat-delay 200
            repeat-rate 40
    }

    mouse {
        accel-profile "flat"
    }

    warp-mouse-to-focus
    focus-follows-mouse max-scroll-amount="0%"
}

/-output "eDP-1" {
    mode "1920x1080@60"
    scale 1.0
}

cursor {
xcursor-theme "Adwaita"
xcursor-size 12
}

layout {
    gaps 0
    center-focused-column "never"
    preset-column-widths {
        proportion 0.33334
        proportion 0.5
        proportion 0.66667
    }

    default-column-width { proportion 1.0; }
    focus-ring {
        off
    }

    border {
        off
    }

}

spawn-at-startup "mako"
spawn-sh-at-startup "emacs --daemon && emacsclient -c -a ''"
spawn-sh-at-startup "wal -qnetR && wbg ~/wallpapers/francesco-paolo-michetti_springtime-and-love_1878.jpg"

hotkey-overlay {
    skip-at-startup
}

prefer-no-csd

screenshot-path "~/images/screenshots/screenshot_from_%Y-%m-%d_%H-%M-%S.png"
// screenshot-path null

animations {
    //off
    slowdown 0.5
}

window-rule {
    match app-id=r#"zen$"# title="^Picture-in-Picture$"
    open-floating true
    default-column-width { proportion 0.33334; }
}

window-rule {
    match app-id="KeePassXC"
    block-out-from "screen-capture"
}

window-rule {
    match app-id="keepassxc"
    default-column-width { proportion 0.3; }
}

binds {

    Mod+Shift+Return { spawn "foot"; }
    Mod+D { spawn "fuzzel"; }

    Mod+W { spawn "zen"; }

    Mod+Return { spawn-sh "emacsclient -c -a ''"; }

    XF86AudioRaiseVolume allow-when-locked=true { spawn-sh "wpctl set-volume @DEFAULT_AUDIO_SINK@ 0.1+"; }
    XF86AudioLowerVolume allow-when-locked=true { spawn-sh "wpctl set-volume @DEFAULT_AUDIO_SINK@ 0.1-"; }
    XF86AudioMute        allow-when-locked=true { spawn-sh "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"; }
    XF86MonBrightnessUp allow-when-locked=true { spawn "brightnessctl" "set" "20%+" ; }
    XF86MonBrightnessDown allow-when-locked=true { spawn "brightnessctl" "set" "20%-" ; }
    
    Mod+O repeat=false { toggle-overview; }

    Mod+Escape repeat=false { close-window; }

    Mod+Left  { focus-column-left; }
    Mod+Down  { focus-window-down; }
    Mod+Up    { focus-window-up; }
    Mod+Right { focus-column-right; }
    Mod+B     { focus-column-left; }
    Mod+N     { focus-window-down; }
    Mod+P     { focus-window-up; }
    Mod+F     { focus-column-right; }

    Mod+Shift+Down  { move-window-down; }
    Mod+Shift+Up    { move-window-up; }
    Mod+Shift+Left { consume-or-expel-window-left; }
    Mod+Shift+Right { consume-or-expel-window-right; }
    Mod+Shift+N     { move-window-down; }
    Mod+Shift+P     { move-window-up; }
    Mod+Shift+B { consume-or-expel-window-left; }
    Mod+Shift+F { consume-or-expel-window-right; }

    Mod+Ctrl+Left  { move-column-left; }
    Mod+Ctrl+Right { move-column-right; }
    Mod+Ctrl+B    { move-column-left; }
    Mod+Ctrl+F     { move-column-right; }

    Mod+Backspace { focus-column-first; }
    Mod+Shift+Backspace  { focus-column-last; }

    Mod+Ctrl+Shift+P         { move-workspace-up; }
    Mod+Ctrl+Shift+N         { move-workspace-down; }

    Mod+WheelScrollDown      cooldown-ms=150 { focus-workspace-down; }
    Mod+WheelScrollUp        cooldown-ms=150 { focus-workspace-up; }
    Mod+Ctrl+WheelScrollDown cooldown-ms=150 { move-column-to-workspace-down; }
    Mod+Ctrl+WheelScrollUp   cooldown-ms=150 { move-column-to-workspace-up; }

    Mod+Shift+WheelScrollDown      cooldown-ms=150 { focus-column-right; }
    Mod+Shift+WheelScrollUp        cooldown-ms=150 { focus-column-left; }
    Mod+Ctrl+Shift+WheelScrollDown { move-column-right; }
    Mod+Ctrl+Shift+WheelScrollUp   { move-column-left; }

    Mod+1 { focus-workspace 1; }
    Mod+2 { focus-workspace 2; }
    Mod+3 { focus-workspace 3; }
    Mod+4 { focus-workspace 4; }
    Mod+5 { focus-workspace 5; }
    Mod+6 { focus-workspace 6; }
    Mod+7 { focus-workspace 7; }
    Mod+8 { focus-workspace 8; }
    Mod+9 { focus-workspace 9; }
    Mod+Shift+1 { move-column-to-workspace 1; }
    Mod+Shift+2 { move-column-to-workspace 2; }
    Mod+Shift+3 { move-column-to-workspace 3; }
    Mod+Shift+4 { move-column-to-workspace 4; }
    Mod+Shift+5 { move-column-to-workspace 5; }
    Mod+Shift+6 { move-column-to-workspace 6; }
    Mod+Shift+7 { move-column-to-workspace 7; }
    Mod+Shift+8 { move-column-to-workspace 8; }
    Mod+Shift+9 { move-column-to-workspace 9; }

    Mod+R { switch-preset-column-width; }
    Mod+Shift+R { switch-preset-window-height; }
    Mod+Ctrl+R { reset-window-height; }

    Mod+M { expand-column-to-available-width; }
    Mod+Shift+M { maximize-column; }
    Mod+Ctrl+M { fullscreen-window; }

    Mod+C { center-column; }
    Mod+Ctrl+C { center-visible-columns; }

    Mod+Minus { set-column-width "-10%"; }
    Mod+Plus { set-column-width "+10%"; }

    Mod+Shift+Minus { set-window-height "-10%"; }
    Mod+Shift+Plus { set-window-height "+10%"; }

    Mod+Space       { toggle-window-floating; }
    Mod+Shift+Space { switch-focus-between-floating-and-tiling; }

    Mod+T { toggle-column-tabbed-display; }

    Mod+S { screenshot; }
    Mod+Ctrl+S { screenshot-screen; }
    Mod+Shift+S { screenshot-window; }

    Mod+Ctrl+Escape allow-inhibiting=false { toggle-keyboard-shortcuts-inhibit; }

    Mod+Shift+Escape { quit; }
}

gestures {

    hot-corners {
        off

    }
}
